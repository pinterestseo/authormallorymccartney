---
interface Props {
  headings: {
    depth: number;
    slug: string;
    text: string;
  }[];
}

const { headings } = Astro.props;
---

<nav class="toc">
  <h2 class="toc-title">Table of Contents</h2>
  <ul>
    {
      headings.map((heading) => (
        <li class={`depth-${heading.depth}`}>
          <a href={`#${heading.slug}`}>{heading.text}</a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  .toc {
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 8px;
    margin-bottom: 2rem;
  }

  .toc-title {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: #1a1a1a;
  }

  .toc ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc li {
    margin: 0.5rem 0;
  }

  .toc a {
    color: #4a5568;
    text-decoration: none;
    transition: color 0.2s;
  }

  .toc a:hover {
    color: #2d3748;
  }

  .depth-2 {
    margin-left: 1rem;
  }

  .depth-3 {
    margin-left: 2rem;
  }
</style>